@model Product

<div class="shadow border-0 my-5">
    <div class="card-header bg-dark bg-gradient text-white m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="ProductId" hidden />
            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-12">
                    <input asp-for="ProductName" disabled class="form-control border-0 shadow mt-1" />
                    <label asp-for="ProductName" class="ms-2 text-dark"></label>
                    
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ProductDescription" disabled class="form-control border-0 shadow mt-1" />
                    <label asp-for="ProductDescription" class="ms-2 text-dark"></label>
                   
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ProductISBN" disabled class="form-control border-0 shadow mt-1" />
                    <label asp-for="ProductISBN" class="ms-2 text-dark"></label>
                   
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ProductAuthor" disabled class="form-control border-0 shadow mt-1" />
                    <label asp-for="ProductAuthor" class="ms-2 text-dark"></label>
                    
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListofPrice" disabled class="form-control border-0 shadow mt-1" />
                    <label asp-for="ListofPrice" class="ms-2 text-dark"></label>
                   
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" disabled class="form-control border-0 shadow mt-1" />
                    <label asp-for="Price" class="ms-2 text-dark"></label>
                   
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListofPrice50" disabled class="form-control border-0 shadow mt-1" />
                    <label asp-for="ListofPrice50" class="ms-2 text-dark"></label>
                    
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListofPrice100" disabled class="form-control border-0 shadow mt-1" />
                    <label asp-for="ListofPrice100" class="ms-2 text-dark"></label>
                   
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class=" btn btn-danger" style="width:150px">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index"
                           class="btn btn-outline-success form-control"
                           style="width:200px">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>




